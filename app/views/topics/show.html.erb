<%= render @topic %>
<div>
  <%= link_to "Topicos", topics_path %>
  <%= link_to "Editar tópico", edit_topic_path(@topic) %>
  <%= button_to "Excluir tópico", @topic, method: :delete%> 
</div>
<% if notice %>
  <p style="color: green"><%= notice %></p>
<% end %>
<h4>Posts</h4>
<% @topic.posts.each do |post| %>
  <div>
    <p><strong> @<%= post.user.name %> : </p>
    <p> <%= post.body %>  </p>
  </div>
<% end %>